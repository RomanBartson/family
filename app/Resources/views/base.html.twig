<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <style>
            .menu-item {
                position: relative;
                display: inline-block;
                margin: 15px;
            }
        </style>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/bootstrap/dist/css/bootstrap.min.css') }}" media="all">
    </head>
    <body>
        <div id="wrapper">
            <div id="container">
                <nav class="navbar navbar-default">
                    <div class="container-fluid inline">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">Brand</a>
                        </div>

                        <a href="/" class="menu-item">
                            Main
                        </a>
                        <a href="/articles" class="menu-item">
                            Articles
                        </a>
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
        <script type="text/javascript" src="{{ asset('bundles/app/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    </body>
</html>
